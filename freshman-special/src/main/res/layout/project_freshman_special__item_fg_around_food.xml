<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/default_selector">

    <com.excitingboat.freshmanspecial.utils.RoundRectImageView
        android:id="@+id/iv_fg_af_small_pic"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/none"
        android:scaleType="fitXY"
        app:roundDegree="@dimen/default_round_degree"

        />

    <TextView
        android:id="@+id/tv_fg_af_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/iv_fg_af_small_pic"
        android:layout_toRightOf="@+id/iv_fg_af_small_pic"
        android:maxLength="13"
        android:singleLine="true"
        android:textColor="#353537"
        android:textSize="15.5sp" />

    <TextView
        android:id="@+id/tv_fg_af_content_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_fg_af_title"
        android:layout_alignStart="@+id/tv_fg_af_title"
        android:layout_below="@+id/tv_fg_af_title"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:text="简介:"
        android:textColor="#444444"
        android:textSize="12.5sp" />

    <TextView
        android:id="@+id/tv_fg_info_content_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_fg_af_content_introduction"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/tv_fg_af_content_introduction"
        android:textColor="#888888"
        android:textSize="12.5sp" />

    <TextView
        android:id="@+id/tv_fg_af_content_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_fg_af_content_introduction"
        android:layout_alignStart="@+id/tv_fg_af_content_introduction"
        android:layout_below="@+id/tv_fg_info_content_s"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        android:maxLines="2"
        android:text="位置:"
        android:textColor="#444444"
        android:textSize="12.5sp" />

    <TextView
        android:id="@+id/tv_fg_info_content_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_fg_af_content_position"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/tv_fg_af_content_position"
        android:ellipsize="end"
        android:textColor="#888888"
        android:textSize="12.5sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ccc" />

</RelativeLayout>