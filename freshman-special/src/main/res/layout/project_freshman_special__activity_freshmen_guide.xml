<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.excitingboat.freshmanspecial.view.activity.FreshmenGuideActivity">

    <include layout="@layout/project_freshman_special__toolbar"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/freshmen_guide_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabIndicatorHeight="2dp"
        app:tabContentStart="15dp"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextAppearance="@style/TabLayout"
        app:tabTextColor="#333333"/>

    <include
        layout="@layout/project_freshman_special__default_divide"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />


    <android.support.v4.view.ViewPager
        android:id="@+id/freshmen_guide_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>
