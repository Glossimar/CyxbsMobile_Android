<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_marginTop="15dp"
    android:paddingTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_layout"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp">

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/list_lost_img_avatar"
                android:layout_width="@dimen/information_img_avatar"
                android:layout_height="@dimen/information_img_avatar"
                android:scaleType="fitCenter"
                tools:src="@drawable/ic_default_avatar"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/list_lost_img_avatar"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/list_lost_text_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="你的名字"
                    android:textColor="#212121"
                    android:textSize="18sp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="来自分类 "
                            android:textColor="@color/text_light_2"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/list_lost_text_kind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text=" 其他"
                            android:textColor="@color/text_light_2"
                            android:textSize="13sp" />


                    </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/list_lost_text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:textColor="@color/text_light_2"
                android:text="2016年11月6日 00:53" />


        </RelativeLayout>

        <TextView
            android:id="@+id/textView_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="16dp"
            android:lineSpacingMultiplier="1.3"
            android:text="寻找着，从未见过的你。"
            android:textColor="@color/text_light_1"
            android:textSize="16sp" />

    </LinearLayout>


