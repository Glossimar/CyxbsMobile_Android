<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/question_detail_bg"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/question_detail_question_title"
            android:textSize="17sp"
            tools:text="线代第一题不会，求解，公式应该没问题，算了几次都不对" />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/question_detail_question_content"
            android:textSize="14sp"
            tools:text="#线代# 常规题目，还请大佬帮忙解答常规题目，还 请大佬帮忙解答常规题目，还请大佬常规常规题目， 还请大佬常规题目，还请大佬帮忙解答常规题目帮忙 答常规题目常规题目，还请大佬帮忙解答常规题目常 规题目常规题目" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/singleImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                tools:src="@drawable/default_avatar" />

            <com.mredrock.cyxbs.component.widget.ninelayout.AutoNineGridlayout
                android:id="@+id/images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/default_avatar" />

            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/avatar"
                android:drawablePadding="2dp"
                android:textColor="@color/question_detail_questioner_nickname"
                android:textSize="13sp"
                tools:drawableRight="@drawable/ic_question_detail_female"
                tools:text="刘童鞋" />

            <TextView
                android:id="@+id/disappearTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nickname"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/avatar"
                android:textColor="@color/question_detail_questioner_disappear_time"
                android:textSize="11sp"
                tools:ignore="SmallSp"
                tools:text="5小时后消失" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_question_detail_reward"
                    android:drawablePadding="3dp"
                    android:textColor="@color/question_detail_question_reward"
                    android:textSize="12sp"
                    tools:text="5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_detail_question_reward"
                    android:textColor="@color/question_detail_question_reward"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="18dp"
        android:background="@color/question_detail_header_gap" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/answerCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/question_detail_answer_count"
            android:textSize="14sp"
            tools:text="6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/answerCount"
            android:text="@string/question_detail_answer_count"
            android:textColor="@color/question_detail_answer_count"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sortBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/question_detail_sort_by_default"
            android:textColor="@color/question_detail_sort_by"
            android:textSize="14sp"
            android:visibility="gone"
            tools:visibility="visible" />
    </RelativeLayout>

    <View
        android:id="@+id/bottomDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="18dp"
        android:background="@color/question_detail_divider" />
</LinearLayout>