<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/question_detail_bg"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:ignore="RtlHardcoded">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/avatar"
            android:drawablePadding="2dp"
            android:textColor="@color/question_detail_nickname"
            android:textSize="14sp"
            tools:drawableRight="@drawable/ic_question_detail_male"
            tools:text="王学霸" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/accepted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_question_detail_accept"
                android:drawablePadding="5dp"
                android:text="@string/question_detail_accepted"
                android:textColor="@color/question_detail_accepted"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_question_detail_accept"
                android:paddingBottom="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:text="@string/question_detail_accept"
                android:textColor="@color/question_detail_accept"
                android:textSize="12sp"
                tools:visibility="gone" />
        </FrameLayout>
    </RelativeLayout>

    <com.mredrock.cyxbs.component.widget.ExpandableTextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        app:animDuration="200"
        app:maxCollapsedLines="3">

        <TextView
            android:id="@+id/expandable_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/question_detail_answer_content"
            android:textSize="13sp" />

        <TextView
            android:id="@id/expand_collapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:textColor="@color/question_detail_answer_expand" />
    </com.mredrock.cyxbs.component.widget.ExpandableTextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/question_detail_answer_date"
            android:textSize="12sp"
            tools:text="2018-03-08" />

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45dp"
            android:layout_toLeftOf="@+id/favor"
            android:drawableLeft="@drawable/ic_question_detail_comment"
            android:drawablePadding="5dp"
            android:textColor="@color/question_detail_favor"
            android:textSize="12sp"
            tools:text="15" />

        <TextView
            android:id="@+id/favor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_question_detail_unfavor"
            android:drawablePadding="5dp"
            android:textColor="@color/question_detail_favor"
            android:textSize="12sp"
            tools:text="25" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="20dp"
        android:background="@color/question_detail_divider" />
</LinearLayout>