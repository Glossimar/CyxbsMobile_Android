<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_comment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/comment_item"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp">


        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/list_information_img_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_official_notification" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/list_information_img_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_information_text_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是昵称"
                android:textColor="@color/crop__button_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/list_information_text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3-16  12:00"
                android:textColor="@color/crop__button_text"
                android:textSize="10sp" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/list_information_text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="16dp"
        android:lineSpacingMultiplier="1.2"
        android:text="如果你无法简洁的表达你的想法，那么只能说你还不够了解他。"
        android:textColor="@color/body_text_1"
        android:textSize="14sp" />


</LinearLayout>