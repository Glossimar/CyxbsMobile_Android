<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.qa.SignActivity"
    tools:ignore="RtlHardcoded">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/toolbar" />

            <com.mredrock.cyxbs.component.widget.card.JCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="12dp"
                app:radius="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="17dp">


                    <LinearLayout
                        android:id="@+id/avatarContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.github.siyamed.shapeimageview.CircularImageView
                            android:id="@+id/avatar"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/default_avatar" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/sign_point_hint"
                                    android:textColor="@color/sign_hint_text"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/pointCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/sign_point_count_default"
                                    android:textColor="@color/sign_point_count"
                                    android:textSize="16sp"
                                    tools:text="666" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/pointDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/sign_point_detail"
                                android:textColor="@color/sign_point_count"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/signDayHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/avatarContainer"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="31dp"
                        android:text="@string/sign_day_hint"
                        android:textColor="@color/sign_hint_text"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/dayCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/signDayHint"
                        android:layout_centerHorizontal="true"
                        android:text="@string/sign_day_count_default"
                        android:textColor="@color/sign_day_count"
                        android:textSize="60sp"
                        tools:text="03" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/dayCount"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/dayCount"
                        android:text="@string/sign_day_count_hint"
                        android:textColor="@color/sign_day_count"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/dayNameContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dayCount"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="22dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/sign_day_name"
                            android:textSize="13sp"
                            tools:text="第2天" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/sign_day_name"
                            android:textSize="13sp"
                            tools:text="第3天" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/sign_day_name"
                            android:textSize="13sp"
                            tools:text="第4天"
                            tools:textColor="@color/sign_today_name" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/sign_day_name"
                            android:textSize="13sp"
                            tools:text="第5天" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/sign_day_name"
                            android:textSize="13sp"
                            tools:text="第6天" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/daySymbolContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dayNameContainer"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="7dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/sign_divider" />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/shape_circle_bg_activity_sign"
                            android:padding="2dp"
                            tools:src="@drawable/shape_circle_src_activity_sign" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/sign_divider" />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/shape_circle_bg_activity_sign"
                            android:padding="2dp"
                            tools:src="@drawable/shape_circle_src_activity_sign" />


                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/sign_divider" />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/shape_circle_bg_activity_sign"
                            android:padding="2dp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/sign_divider" />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/shape_circle_bg_activity_sign"
                            android:padding="2dp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/sign_divider" />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/shape_circle_bg_activity_sign"
                            android:padding="2dp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/sign_divider" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dayPointContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/daySymbolContainer"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="22dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/sign_day_name"
                            android:textSize="13sp"
                            tools:text="+5" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/sign_day_name"
                            android:textSize="13sp"
                            tools:text="+15" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/sign_day_name"
                            android:textSize="13sp"
                            tools:text="+20"
                            tools:textColor="@color/sign_today_name" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/sign_day_name"
                            android:textSize="13sp"
                            tools:text="+25" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/sign_day_name"
                            android:textSize="13sp"
                            tools:text="+30" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dayPointContainer"
                        android:layout_marginBottom="30dp"
                        android:layout_marginTop="36dp">

                        <LinearLayout
                            android:id="@+id/toSignFrame"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <com.mredrock.cyxbs.ui.widget.RatioLayout
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                app:ratio="0.218">

                                <Button
                                    android:id="@+id/sign"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/shape_rect_bg_sign_button"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:text="@string/sign_to_sign"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />
                            </com.mredrock.cyxbs.ui.widget.RatioLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/signedFrame"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/sign_hint_signed"
                            android:textColor="@color/sign_hint_singed"
                            android:textSize="13sp"
                            android:visibility="gone" />
                    </FrameLayout>
                </RelativeLayout>
            </com.mredrock.cyxbs.component.widget.card.JCardView>

            <com.mredrock.cyxbs.component.widget.card.JCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:radius="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="21dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="22dp"
                    android:text="@string/sign_remind_switch_hint"
                    android:textColor="@color/sign_hint_text"
                    android:textSize="14sp" />

                <com.suke.widget.SwitchButton
                    android:id="@+id/remindSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_marginRight="19dp"
                    app:sb_background="#BEBEBE"
                    app:sb_button_color="#FFFFFF"
                    app:sb_checked_color="#788EFA"
                    app:sb_effect_duration="200"
                    app:sb_show_indicator="false"
                    app:sb_uncheck_color="#BEBEBE" />
            </com.mredrock.cyxbs.component.widget.card.JCardView>
        </LinearLayout>
    </ScrollView>

    <android.support.v7.widget.CardView
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000" />
    </android.support.v7.widget.CardView>
</FrameLayout>