<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_layout"
    android:clickable="true"
    android:minHeight="@dimen/item_min_height_large"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_normal"
    android:paddingRight="@dimen/padding_normal">

    <TextView
        android:id="@+id/food_detail_restaurant_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:minHeight="@dimen/item_min_height_normal"
        android:textColor="@color/body_text_1"
        android:textSize="@dimen/app_text_size_medium"
        tools:text="@string/placeholder_explore_restaurant_comment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_small"
        android:orientation="horizontal">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/food_detail_restaurant_comment_user_img"
            android:layout_width="@dimen/avatar_size_small"
            android:layout_height="@dimen/avatar_size_small"
            android:padding="@dimen/spacing_micro"
            app:siBorderWidth="1dp"
            app:siBorderColor="@color/grey"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_restaurant_comment_user" />

        <TextView
            android:id="@+id/food_detail_restaurant_comment_author"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/avatar_size_small"
            android:layout_marginLeft="@dimen/padding_normal"
            android:gravity="center_vertical"
            android:textColor="@color/text_light_2"
            android:textSize="@dimen/app_text_size_medium"
            tools:text="@string/placeholder_explore_restaurant_author" />

        <TextView
            android:id="@+id/food_detail_restaurant_comment_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/avatar_size_small"
            android:gravity="center_vertical|end"
            android:textColor="@color/text_light_2"
            android:textSize="@dimen/app_text_size_medium"
            tools:text="@string/placeholder_explore_restaurant_date" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider"
        android:paddingTop="@dimen/divider_padding_top" />

</LinearLayout>