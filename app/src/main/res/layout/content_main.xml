<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.activity.MainActivity"
    tools:showIn="@layout/activity_main">

    <com.mredrock.cyxbs.component.widget.MainViewPager
        android:id="@+id/main_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    <com.mredrock.cyxbs.component.widget.bottombar.BottomBar
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.mredrock.cyxbs.component.widget.bottombar.BottomButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            app:button_image_normal="@drawable/ic_nearby"
            app:button_text="@string/community"
            app:color_choose="@color/colorPrimary"
            app:color_normal="@color/tabText"/>

        <com.mredrock.cyxbs.component.widget.bottombar.BottomButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            app:button_image_normal="@drawable/ic_favorites"
            app:button_text="@string/course"
            app:color_choose="@color/colorPrimary"
            app:color_normal="@color/tabText"/>

        <com.mredrock.cyxbs.component.widget.bottombar.BottomButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            app:button_image_normal="@drawable/ic_restaurants"
            app:button_text="@string/explore"
            app:color_choose="@color/colorPrimary"
            app:color_normal="@color/tabText"/>

        <com.mredrock.cyxbs.component.widget.bottombar.BottomButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            app:button_image_normal="@drawable/ic_friends"
            app:button_text="@string/my_page"
            app:color_choose="@color/colorPrimary"
            app:color_normal="@color/tabText"/>

    </com.mredrock.cyxbs.component.widget.bottombar.BottomBar>

</LinearLayout>