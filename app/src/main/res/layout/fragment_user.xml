<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    tools:context=".ui.fragment.UserFragment">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/topBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_me_top"
            app:layout_constraintBottom_toTopOf="@+id/helper"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingTop="25dp"
            android:text="@string/my_page"
            android:textColor="@color/user_fragment_white_color"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="27dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_avatar"
            app:civ_border_color="@color/user_fragment_white_color"
            app:civ_border_width="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:text="@string/fragment_user_empty_username"
            android:textColor="@color/user_fragment_white_color"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@+id/introduce"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/avatar"
            app:layout_constraintTop_toTopOf="@+id/avatar"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/ic_me_edit"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/fragment_user_empty_introduce"
            android:textColor="@color/user_fragment_white_color"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.01"
            app:layout_constraintStart_toStartOf="@+id/username"
            app:layout_constraintTop_toBottomOf="@+id/username" />

        <com.mredrock.cyxbs.ui.widget.UserFragmentItem
            android:id="@+id/dailySign"
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            app:itemIcon="@drawable/ic_me_sign"
            app:itemTitle="每日签到"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatar" />

        <View
            android:id="@+id/helper"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/dailySign"
            app:layout_constraintEnd_toEndOf="@+id/dailySign"
            app:layout_constraintStart_toStartOf="@+id/dailySign"
            app:layout_constraintTop_toTopOf="@+id/dailySign"
            app:layout_constraintVertical_bias="0.65" />

        <com.mredrock.cyxbs.ui.widget.UserFragmentItem
            android:id="@+id/store"
            android:layout_width="0dp"
            android:layout_height="66dp"
            app:bottomRadius="-9dp"
            app:hideBottomShadow="true"
            app:itemIcon="@drawable/ic_me_store"
            app:itemTitle="积分商城"
            app:layout_constraintEnd_toEndOf="@+id/dailySign"
            app:layout_constraintStart_toStartOf="@+id/dailySign"
            app:layout_constraintTop_toBottomOf="@+id/dailySign"
            app:rightRadius="-9dp" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:background="@color/user_fragment_divider"
            app:layout_constraintEnd_toEndOf="@+id/dailySign"
            app:layout_constraintStart_toStartOf="@+id/dailySign"
            app:layout_constraintTop_toBottomOf="@+id/store" />

        <com.mredrock.cyxbs.ui.widget.UserFragmentItem
            android:id="@+id/question"
            android:layout_width="0dp"
            android:layout_height="56dp"
            app:bottomRadius="-9dp"
            app:hideBottomShadow="true"
            app:hideTopShadow="true"
            app:itemIcon="@drawable/ic_me_question"
            app:itemTitle="问一问"
            app:layout_constraintEnd_toEndOf="@+id/dailySign"
            app:layout_constraintStart_toStartOf="@+id/dailySign"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:leftRadius="-9dp"
            app:rightRadius="-9dp"
            app:topRadius="-9dp" />

        <View
            android:id="@+id/divider1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:background="@color/user_fragment_divider"
            app:layout_constraintEnd_toEndOf="@+id/dailySign"
            app:layout_constraintStart_toStartOf="@+id/dailySign"
            app:layout_constraintTop_toBottomOf="@+id/question" />

        <com.mredrock.cyxbs.ui.widget.UserFragmentItem
            android:id="@+id/help"
            android:layout_width="0dp"
            android:layout_height="56dp"
            app:bottomRadius="-9dp"
            app:hideBottomShadow="true"
            app:hideTopShadow="true"
            app:itemIcon="@drawable/ic_me_help"
            app:itemTitle="帮一帮"
            app:layout_constraintEnd_toEndOf="@+id/dailySign"
            app:layout_constraintStart_toStartOf="@+id/dailySign"
            app:layout_constraintTop_toBottomOf="@+id/divider1"
            app:leftRadius="-9dp"
            app:rightRadius="-9dp"
            app:topRadius="-9dp" />

        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:background="@color/user_fragment_divider"
            app:layout_constraintEnd_toEndOf="@+id/dailySign"
            app:layout_constraintStart_toStartOf="@+id/dailySign"
            app:layout_constraintTop_toBottomOf="@+id/help" />

        <com.mredrock.cyxbs.ui.widget.UserFragmentItem
            android:id="@+id/draft"
            android:layout_width="0dp"
            android:layout_height="66dp"
            app:hideTopShadow="true"
            app:itemIcon="@drawable/ic_me_draft"
            app:itemTitle="草稿箱"
            app:layout_constraintEnd_toEndOf="@+id/dailySign"
            app:layout_constraintStart_toStartOf="@+id/dailySign"
            app:layout_constraintTop_toBottomOf="@+id/divider2"
            app:leftRadius="-9dp"
            app:topRadius="-9dp" />

        <com.mredrock.cyxbs.ui.widget.UserFragmentItem
            android:id="@+id/relateMe"
            android:layout_width="0dp"
            android:layout_height="76dp"
            app:itemIcon="@drawable/ic_me_relate_me"
            app:itemTitle="与我相关"
            app:layout_constraintEnd_toEndOf="@+id/dailySign"
            app:layout_constraintStart_toStartOf="@+id/dailySign"
            app:layout_constraintTop_toBottomOf="@+id/draft" />

        <com.mredrock.cyxbs.ui.widget.UserFragmentItem
            android:id="@+id/setting"
            android:layout_width="0dp"
            android:layout_height="76dp"
            app:itemIcon="@drawable/ic_me_setting"
            app:itemTitle="设置"
            app:layout_constraintEnd_toEndOf="@+id/dailySign"
            app:layout_constraintStart_toStartOf="@+id/dailySign"
            app:layout_constraintTop_toBottomOf="@+id/relateMe" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>