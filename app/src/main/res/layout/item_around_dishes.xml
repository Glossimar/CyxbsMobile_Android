<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="100dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:minHeight="108dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/item_around_dishes_shop_img"
            android:layout_width="127.5dp"
            android:layout_height="87.5dp"
            android:layout_marginLeft="6dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/item_around_dishes_shop_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/item_around_dishes_shop_img"
            android:layout_toEndOf="@+id/item_around_dishes_shop_img"
            android:textColor="#404040"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_around_dishes_shop_content"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_around_dishes_shop_title"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@+id/item_around_dishes_shop_img"
            android:layout_toEndOf="@+id/item_around_dishes_shop_img"
            android:textColor="#b5b5b5"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_around_dishes_shop_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/item_around_dishes_shop_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/item_around_dishes_shop_img"
            android:layout_toEndOf="@+id/item_around_dishes_shop_img"
            android:gravity="bottom"
            android:textColor="#747474"
            android:textSize="13sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#d9d9d9" />
</LinearLayout>
