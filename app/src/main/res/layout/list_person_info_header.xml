<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:background="@color/crop__button_bar"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingTop="12dp">

        <com.mredrock.cyxbs.component.widget.CircleImageView
            android:id="@+id/person_info_avatar"
            android:layout_width="@dimen/information_img_avatar"
            android:layout_height="@dimen/information_img_avatar"
            android:src="@mipmap/avatar_default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/person_info_avatar"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/peron_info_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/body_text_1"
                    android:textSize="18sp"
                    tool:text="我是昵称" />

                <TextView
                    android:id="@+id/person_info_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:paddingBottom="1dp"
                    android:gravity="center"
                    android:textColor="@color/pink"
                    android:text="♂"
                    android:textSize="18sp"/>

            </LinearLayout>


            <TextView
                android:id="@+id/person_info_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/crop__button_text"
                android:textSize="12sp"
                tool:text="简介：我是.............." />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/person_info_avatar"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:text="@string/latest"
        android:textColor="@color/text_light_2"
        android:textSize="18sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white" />
</LinearLayout>


