<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:orientation="vertical"
    android:background="@color/grey_hex_fe"
    android:padding="20dp"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="添加话题"
            android:textSize="18sp"
            android:textColor="@color/black_lightly"
            />
        <TextView
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="确定"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_help_search"/>

        <EditText
            android:layout_marginLeft="5dp"
            android:id="@+id/edt_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:background="@null"
            android:maxLines="1"
            android:maxLength="20"
            />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/grey_hex_d8"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_hex_73"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:text="热门话题"/>

    <RadioGroup
        android:id="@+id/group_tag_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/btn_tag_1"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_help_radio"
            android:button="@null"
            android:gravity="center"
            android:text="大物"
            android:textColor="@color/help_btn_radio_text_color"
            android:textSize="14sp"
            android:checked="false"/>

        <RadioButton
            android:id="@+id/btn_tag_2"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_help_radio"
            android:button="@null"
            android:gravity="center"
            android:text="英语"
            android:textColor="@color/help_btn_radio_text_color"
            android:textSize="14sp"
            android:checked="false"/>

        <RadioButton
            android:id="@+id/btn_tag_3"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_help_radio"
            android:button="@null"
            android:gravity="center"
            android:text="线代"
            android:textColor="@color/help_btn_radio_text_color"
            android:textSize="14sp"
            android:checked="false"/>

        <RadioButton
            android:id="@+id/btn_tag_4"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_help_radio"
            android:button="@null"
            android:gravity="center"
            android:text="高数"
            android:textColor="@color/help_btn_radio_text_color"
            android:textSize="14sp"
            android:checked="false"/>

    </RadioGroup>

    <RadioGroup
        android:id="@+id/group_tag_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/btn_tag_5"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_help_radio"
            android:button="@null"
            android:gravity="center"
            android:text="大物"
            android:textColor="@color/help_btn_radio_text_color"
            android:textSize="14sp"
            android:checked="false"/>

        <RadioButton
            android:id="@+id/btn_tag_6"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_help_radio"
            android:button="@null"
            android:gravity="center"
            android:text="英语"
            android:textColor="@color/help_btn_radio_text_color"
            android:textSize="14sp"
            android:checked="false"/>


        <View
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <View
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </RadioGroup>

</LinearLayout>