<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="5dp"
    app:contentPaddingLeft="15dp"
    app:contentPaddingRight="15dp"
    app:contentPaddingBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/help_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/red_point"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_gravity="right"
            android:src="@drawable/shape_red_solid"/>
        <TextView
            android:id="@+id/tv_question"
            android:textSize="16sp"
            android:textColor="@color/grey_hex_2e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="提问：线性第一题不会做，求解" />

        <TextView
            android:id="@+id/tv_answer"
            android:textSize="15sp"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="帮助：是的，公式是没有问题的，但是你的..." />

        <TextView
            android:id="@+id/tv_time"
            android:layout_marginTop="10dp"
            android:textColor="@color/grey_hex_a4"
            android:text="采纳时间：刚刚"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>
