<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.mredrock.cyxbs.ui.widget.RollerView
            android:id="@+id/rollerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            app:aspectRatio="1.79"
            app:EdgePageSize="32dp"
            app:pageScale="0.89"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/explore_portal_holder"
                android:layout_width="0dp"
                android:layout_height="@dimen/explore_holder_height"
                android:layout_weight="1"
                android:background="@drawable/bg_explore_holder"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/explore_image_size"
                    android:layout_height="@dimen/explore_image_size"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_portal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/explore_portal"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/explore_map_holder"
                android:layout_width="0dp"
                android:layout_height="@dimen/explore_holder_height"
                android:layout_weight="1"
                android:background="@drawable/bg_explore_holder"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/explore_image_size"
                    android:layout_height="@dimen/explore_image_size"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_map"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/explore_map"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/explore_what_to_eat_holder"
                android:layout_width="0dp"
                android:layout_height="@dimen/explore_holder_height"
                android:layout_weight="1"
                android:background="@drawable/bg_explore_holder"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/explore_image_size"
                    android:layout_height="@dimen/explore_image_size"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_find_food"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/explore_eat"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/explore_surrounding_food_holder"
                android:layout_width="0dp"
                android:layout_height="@dimen/explore_holder_height"
                android:layout_weight="1"
                android:background="@drawable/bg_explore_holder"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/explore_image_size"
                    android:layout_height="@dimen/explore_image_size"
                    android:src="@drawable/ic_around_food"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/explore_around_food"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/explore_electric_query_holder"
                android:layout_width="0dp"
                android:layout_height="@dimen/explore_holder_height"
                android:layout_weight="1"
                android:background="@drawable/bg_explore_holder"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/explore_image_size"
                    android:layout_height="@dimen/explore_image_size"
                    android:src="@drawable/ic_eletric"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/explore_electric"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/explore_lost_and_found_holder"
                android:layout_width="0dp"
                android:layout_height="@dimen/explore_holder_height"
                android:layout_weight="1"
                android:background="@drawable/bg_explore_holder"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/explore_image_size"
                    android:layout_height="@dimen/explore_image_size"
                    android:src="@drawable/ic_lost"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lost_and_found"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</ScrollView>

