<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.mredrock.cyxbs.ui.widget.RollerView
            android:id="@+id/rollerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            app:EdgePageSize="32dp"
            app:aspectRatio="1.53"
            app:pageScale="0.89"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/explore_freshman_holder"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/bg_explore_freshman"
            android:foreground="?attr/selectableItemBackground">


            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4"
                app:srcCompat="@drawable/ic_freshman"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="2017迎新网"
                android:textColor="#ffffff"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.45"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.41"
                app:srcCompat="@drawable/ic_explore_arrow_right"/>
        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <com.mredrock.cyxbs.ui.widget.ExploreItem
                    android:id="@+id/explore_portal_holder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    app:icon="@drawable/ic_portal"
                    app:ratio="0.741"
                    app:title="@string/explore_portal"/>

                <com.mredrock.cyxbs.ui.widget.ExploreItem
                    android:id="@+id/explore_map_holder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    app:icon="@drawable/ic_map"
                    app:ratio="0.741"
                    app:title="@string/explore_map"/>

                <com.mredrock.cyxbs.ui.widget.ExploreItem
                    android:id="@+id/explore_surrounding_food_holder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    app:icon="@drawable/ic_around_food"
                    app:ratio="0.741"
                    app:title="@string/explore_around_food"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.mredrock.cyxbs.ui.widget.ExploreItem
                    android:id="@+id/explore_electric_query_holder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    app:icon="@drawable/ic_eletric"
                    app:ratio="0.741"
                    app:title="@string/explore_electric"/>

                <com.mredrock.cyxbs.ui.widget.ExploreItem
                    android:id="@+id/explore_lost_and_found_holder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    app:icon="@drawable/ic_lost"
                    app:ratio="0.741"
                    app:title="@string/lost_and_found"/>

                <com.mredrock.cyxbs.ui.widget.ExploreItem
                    android:id="@+id/explore_what_to_eat_holder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    app:icon="@drawable/ic_find_food"
                    app:ratio="0.741"
                    app:title="@string/explore_eat"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

