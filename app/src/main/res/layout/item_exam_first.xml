<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@android:color/transparent" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/circle_bg_gray" />

            <View
                android:layout_width="1dp"
                android:layout_height="28dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/divider_bg" />

            <TextView
                android:id="@+id/item_exam_first_tv_time"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:textColor="@color/body_text_3" />

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/divider_bg" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/item_exam_first_iv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_exam_star_normal" />


    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_weight="3"
        android:background="@color/white"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/ic_exam_bookmark" />

                <TextView
                    android:id="@+id/item_exam_first_tv_course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginLeft="24dp"
                    android:text="大学物理"
                    android:textColor="@color/body_text_1" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/ic_exam_position" />

                <TextView
                    android:id="@+id/item_exam_first_tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:text="二教2201"
                    android:textColor="@color/body_text_1" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/ic_exam_clock" />

                <TextView
                    android:id="@+id/item_exam_first_day_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:text="19:00-20:00"
                    android:textColor="@color/body_text_1" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
