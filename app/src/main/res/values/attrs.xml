<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="red_viewpager">
        <attr name="hint_mode">
            <enum name="point" value="0" />
            <enum name="number" value="1" />
        </attr>
        <attr name="hint_gravity">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
        <attr name="auto_play" format="integer" />
    </declare-styleable>

    <declare-styleable name="TagFlowLayout">
        <attr name="multi_suppout" format="boolean"/>
        <attr name="max_select" format="integer"/>
    </declare-styleable>
    <declare-styleable name="Toolbar">
        <attr name="text_title" format="string" />
        <attr name="text_left" format="string" />
        <attr name="text_right" format="string" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="BottomButton" >
        <attr name="button_text" format="string" />
        <attr name="button_text_size" format="dimension" />
        <attr name="button_text_color_normal" format="color" />
        <attr name="button_text_color_choose" format="color" />
        <attr name="button_image_normal" format="reference" />
        <attr name="button_image_choose" format="reference" />
        <attr name="button_image_color_normal" format="color" />
        <attr name="button_image_color_choose" format="color" />
        <attr name="button_text_image_margin" format="dimension" />
        <attr name="color_choose" format="color" />
        <attr name="color_normal" format="color" />
    </declare-styleable>
</resources>